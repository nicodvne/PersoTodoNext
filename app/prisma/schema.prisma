generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"] // imp√©ratif pour mac M1
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PersoTodo {
  id String @id @default(uuid()) @map("_id")
  title String
  isDone Boolean @default(false)
  createdAt DateTime @default(now())
}
